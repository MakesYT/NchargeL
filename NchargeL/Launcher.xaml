<Page x:Class="NchargeL.Launcher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NchargeL"
      
      mc:Ignorable="d" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      
      Width="750" Height="380"
      Title="Launcher">
    <Page.Resources>
        <local:Data x:Key="t"></local:Data>
        
    </Page.Resources>
    <Grid>
        <ListBox SelectedValuePath="Id" DisplayMemberPath="Name"  x:Name="list" Background="{DynamicResource BodyColorWith50Opacity}" Width="200" VerticalAlignment="Center" Height="380" HorizontalAlignment="Left" 
                 ItemsSource="{Binding Source={StaticResource t},Path=clients,UpdateSourceTrigger=PropertyChanged}"  SelectionChanged="list_SelectionChanged" UseLayoutRounding="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="555,247,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>
